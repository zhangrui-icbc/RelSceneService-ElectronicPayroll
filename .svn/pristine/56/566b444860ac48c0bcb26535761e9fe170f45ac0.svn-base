
body, div, dl, dt, dd, ul, ol, li, h1, h2, h3, h4, h5, h6, pre, form, fieldset, input, textarea, p, blockquote
{font-family: "Microsoft Yahei";}
.title{font-size:40px;margin-left:20px;
    font-family: fantasy;
    height:60px;
    font-weight: bolder;line-height: 80px;}
    body{margin:0px;}
    
    
*{
	-webkit-overflow-scrolling:touch;
	-webkit-tap-highlight-color:rgba(0,0,0,0);
}
#header {
	    width: 100%;
	height: 200px;
	position: absolute;
	top: 0;
	background-image: url(../images/bg.png);
}
.gap{    background-color: #F0F0F0;
    height: 15px;
}
#footer {
	width: 100%;
	height: 130px;
	position: absolute;
	bottom: 0;
	border-top:1px grey solid;
}


#content ,#content1{
	width: 100%;
	top: 0px;
	overflow: auto;
	position: absolute;
    bottom: 130px;
    overflow-x: hidden;
   /*  background-color: rgba(116, 116, 117, 0.11); */
}

#content1{
    font-size: 35px;
    text-align: center;
    color: grey;
    margin-top: 500px;
}

.pic{
	height:100%;
	width:20%;
	float:left;
}

li img{height: 32px;
    width: 32px;
    float: left;
    margin-top: 30px;
    margin-left: 20px;}

.orderdetail{display: inline-block;
    vertical-align: middle;
    line-height: 60px;
    width: 100%;color: #333333;}
.left{height:100%;width:65%;float:left;    padding-left: 20px;}
.right{height:100%;float:left;line-height:180px;}
.p1{height: 80px;
    width: 100%;
    line-height: 80px;
    }
.p2{height: 80px;
    width: 100%;
    float:left;
    }
.orderTime{float:left;font-size:35px;    margin-left: 10px;color: #333333;}
.status{float:right;font-size:35px;margin-right: 50px;color: #333333;}

.orderDesc{height:80px;font-size:35px;float:left;width: 90%;margin-left: 10px;}
.orderAmt{height:100px;font-size:35x;float:left;}



ul{
	width:100%;
	list-style: none;
	margin: 0;
	padding: 0;

}

li{
	width:100%;
	height: 180px;
    border-bottom: 15px solid #F0F0F0;
}

.dishName{
	width:50%;
	height:100%;
	float:left;
	font-size:40px;
}


.dishPrice{
	width:20%;
	height:100%;
	float:left;
	color:red;
	font-size:40px;
	line-height:180px;
}

p {
	height: 200px;
	font-size: 50px;
	text-align: center;
	line-height: 200px;
	margin: 0 0 0 0;
}



.img_wrap {
	height: 48px;
	display: table-cell; 
	vertical-align: middle;
	text-align: center;
	margin-top: 20px;
}

sup {
	background: red;
	color: white;
	border-radius: 30px; /*Ô²½Ç*/
	padding: 0px 10px; /*×óÓÒ±ß¾à*/
	top: -20px;
        position: relative;
	font-size: 30px;
}